<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root id="AnchorPane" fx:id="mainAnchorPane" type="AnchorPane" xmlns="http://javafx.com/javafx/8.0" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <BorderPane maxHeight="300.0" maxWidth="500.0">
               <center>
                  <VBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" text="Welcome" textAlignment="CENTER">
                           <font>
                              <Font size="47.0" />
                           </font>
                        </Label>
                        <Label maxWidth="300.0" text="Open an image or batch analyse a folder using the following buttons or simply drag-n-drop image/folder" textAlignment="CENTER" wrapText="true" />
                        <Button mnemonicParsing="false" onAction="#addFile" text="Add a file" />
                        <Button mnemonicParsing="false" onAction="#addFolder" text="Add a folder" />
                     </children>
                  </VBox>
               </center>
            </BorderPane>
         </children>
      </StackPane>
   </children>
</fx:root>
